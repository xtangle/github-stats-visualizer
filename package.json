{
  "name": "lit-element-example",
  "version": "0.0.0",
  "description": "Web components using lit-element hosted on Github Pages",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "es-dev-server --app-index index.html --node-resolve --open --watch",
    "start:compatibility": "es-dev-server --compatibility all --app-index index.html --node-resolve --open --watch",
    "build": "rimraf docs && rollup -c rollup.config.js"
  },
  "dependencies": {
    "@vaadin/vaadin-grid": "^5.4.8",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.9.29",
    "es-dev-server": "^1.18.0",
    "husky": "^3.0.5",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add docs"
    }
  }
}
